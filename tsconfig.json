{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "outDir": "./out",
    "lib": ["dom", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "paths": {
      "@helpers": ["./helpers.ts"]
    }
  },
  "include": [
    "./src/*.d.ts",
    "./src/*.tsx",
    "./src/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
